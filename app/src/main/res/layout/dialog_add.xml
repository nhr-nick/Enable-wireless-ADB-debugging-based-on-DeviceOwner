<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="15dp">
    <EditText android:id="@+id/et_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="名称(如联通)"/>
    <EditText android:id="@+id/et_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="激活码" android:layout_marginTop="5dp"/>
    <EditText android:id="@+id/et_smdp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Smdp地址" android:layout_marginTop="5dp"/>
</LinearLayout>
